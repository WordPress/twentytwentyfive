{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Dusk",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#E2E2E2",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#3B3B3B",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#F5EDFF",
					"name": "Accent 1",
					"slug": "accent-1"
				},
				{
					"color": "#650DD4",
					"name": "Accent 2",
					"slug": "accent-2"
				},
				{
					"color": "#191919",
					"name": "Accent 3",
					"slug": "accent-3"
				},
				{
					"color": "#5F5F5F",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#DBDBDB",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#3B3B3B33",
					"name": "Opacity 20%",
					"slug": "opacity-20"
				}
			]
		},
		"custom": {
			"color": {
				"accent-2-opacity-20": "#650DD433"
			}
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var:preset|font-family|fira-code",
			"fontSize": "var:preset|font-size|medium",
			"fontStyle": "normal",
			"fontWeight": "300",
			"letterSpacing": "-0.18px",
			"lineHeight": "1.5"
		},
		"blocks": {
			"core/code": {
				"color": {
					"text": "var:preset|color|black",
					"background": "var:preset|color|secondary"
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontWeight": "300"
				},
				"color": {
					"text": "var:preset|color|accent-2"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var:preset|color|accent-2"
						},
						"typography": {
							"textDecoration": "underline"
						},
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontWeight": "300"
				},
				"color": {
					"text": "var:preset|color|accent-2"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var:preset|color|accent-2"
						},
						"typography": {
							"textDecoration": "underline"
						},
						":hover": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/post-title": {
				"typography": {
					"fontWeight": "400",
					"letterSpacing": "-0.96px"
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var:preset|color|black"
				},
				"typography": {
					"fontFamily": "var:preset|font-family|vollkorn",
					"fontSize": "var:preset|font-size|x-large",
					"fontWeight": "400",
					"letterSpacing": "-0.76px"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var:preset|font-family|fira-code",
							"fontSize": "var:preset|font-size|small",
							"fontWeight": "300",
							"letterSpacing": "-0.14px"
						},
						"color": {
							"text": "var:preset|color|contrast"
						}
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var:preset|color|black"
				},
				"typography": {
					"fontFamily": "var:preset|font-family|fira-code",
					"fontSize": "var:preset|font-size|medium",
					"fontWeight": "500",
					"letterSpacing": "-0.18px"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var:preset|font-family|vollkorn",
					"fontSize": "var:preset|font-size|large"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var:preset|font-family|fira-code",
					"fontSize": "var:preset|font-size|small",
					"fontWeight": "400",
					"letterSpacing": "-0.36px"
				},
				"color": {
					"text": "var:preset|color|base",
					"background": "var:preset|color|accent-2"
				},
				"border":{
					"radius": "4px"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var:preset|font-family|vollkorn"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "48px",
					"letterSpacing": "-0.96px;"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "38px",
					"letterSpacing": "-0.96px"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "32px",
					"letterSpacing": "-0.64px"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "28px",
					"letterSpacing": "-0.56px"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "24px",
					"letterSpacing": "-0.48px"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var:preset|font-size|small",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			}
		},
		"variations": {
			"post-terms-1": {
				"elements": {
					"link": {
						"border": {
							"color": "var:custom|color|accent-2-opacity-20",
							"radius": "4px",
							"width": "0.8px",
							"style": "solid"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"section-1": {
				"color": {
					"text": "var:preset|color|base"
				}
			},
			"section-2": {
				"color": {
					"text": "var:preset|color|base"
				}
			},
			"section-3": {
				"color": {
					"text": "var:preset|color|accent-2"
				}
			}
		}
	}
}
